<table>
  <h1><strong><center>Patient Details</center></strong></h1>
  <tr><%= link_to 'New' , new_patient_path %></tr>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Age</th>
    <th>Address</th>
    <th>Mobile</th>
    <th>Gender</th>
    <th>Hospital Id</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @patient.each do |h| %>
  <tr>
      <td><%= h.First_Name %></td>
      <td><%= h.Last_Name %></td>
      <td><%= h.age %></td>
      <td><%= h.Address %></td>
      <td><%= h.Mobile %></td>
      <td><%= h.Gender %></td>
      <td><%= h.hospital_id %></td>
      <td><%= link_to 'Show' , patient_path(h)%></td>
      <td><%= link_to 'Edit' , edit_patient_path(h)%></td>
      <td><%= link_to 'Delete' , patient_path(h) , method: :delete, data: {confirm: 'Are you sure?'}%></td>
  </tr>
  <% end %>
</table>
